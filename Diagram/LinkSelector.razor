@using Excubo.Blazor.Diagrams.__Internal

@code {
    [CascadingParameter] public Diagram Diagram { get; set; }
    [Parameter] public LinkType Type { get; set; }
    [Parameter] public EventCallback<LinkType> TypeChanged { get; set; }
    [Parameter] public Arrow Arrow { get; set; }
    [Parameter] public EventCallback<Arrow> ArrowChanged { get; set; }
    protected override void OnParametersSet()
    {
        Diagram.LinkSelectorArea = @<CascadingValue Value="Diagram.Links" IsFixed="true">
                <DefaultLinkSelector Type="Type" Arrow="Arrow" TypeChanged="TypeChanged" ArrowChanged="ArrowChanged"/>
            </CascadingValue>;
        base.OnParametersSet();
    }
}
