
<CascadingValue Name="@(nameof(LinkBase.IsInternallyGenerated))" Value="true" IsFixed="true">
    @foreach (var link in Links)
    {
        <Link @key="(link.Source, link.Target)" Source="link.Source" Target="link.Target" OnCreate="link.OnCreate" />
    }
</CascadingValue>

@code{
    [Parameter] public List<LinkData> Links { get; set; }
    internal void TriggerStateHasChanged() => StateHasChanged();
}