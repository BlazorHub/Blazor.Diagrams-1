@inherits LinkBase
@using Excubo.Blazor.Diagrams.Extensions
@using (var temporary_culture = new CultureSwapper())
{
    if (Source != null && Target != null)
    {
        <line x1="@SourceX"
              y1="@SourceY"
              x2="@TargetX"
              y2="@TargetY"
              stroke="black"
              stroke-width="@(Source.Node != null && Target.Node != null ? "4px" : "2px")"
              style="@(Selected ? "stroke-dasharray: 8 2; animation: diagram-link-unfinished 0.4s ease infinite;" : "")" />
    }
}