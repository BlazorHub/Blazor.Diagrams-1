@inherits LinkBase
@using Excubo.Blazor.Diagrams.Extensions
@using (var temporary_culture = new CultureSwapper())
{
    <g transform="scale(@Zoom)">
        @if (Source != null && Target != null)
        {
            <line x1="@Source.X"
                  y1="@Source.Y"
                  x2="@Target.X"
                  y2="@Target.Y"
                  stroke="black"
                  stroke-width="@(3 * Zoom)"
                  @onmouseover="OnLinkOver"
                  @onmouseout="OnLinkOut" />
        }
    </g>
}